<!DOCTYPE html>
<html>
<head>
  <title>Code4pro9</title>
	<!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>

<body>
	<header>
		<!-- Dropdown Structure -->
		<ul id="dropdown1" class="dropdown-content">
		  <li> <%= link_to 'My Profile', edit_user_registration_path %></li>
		  <li class="divider"></li>
		  <li> <%= link_to 'My Projects', root_path %></li>
		  <li> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: {confirm: 'Sure to Sign Out?'} %></li>
		</ul>
	  <nav>
	  	<div class="container">
		    <div class="nav-wrapper">
		      <%= link_to 'Code4pro9', root_path, class: 'brand-logo' %>
		      <ul id="nav-mobile" class="right hide-on-med-and-down">
		      	<% if !user_signed_in? %>
		      		<li><%= link_to 'About', root_path %></li>
		      		<li><%= link_to 'Projects', projects_path %></li>
		      		<li><%= link_to 'Sign Un', new_user_registration_path %></li>
		      		<li><%= link_to 'Sign In', new_user_session_path %></li>
		      	<% else %>
					<li><a class="dropdown-button valign-wrapper" href="#!" data-activates="dropdown1">
						<%= image_tag avatar_url(current_user), class: 'circle responsive-img' %>
						<%= current_user.name %>
						<i class="material-icons right">arrow_drop_down</i></a></li>
		      	<% end %>
		      </ul>
		    </div>
	  	</div>
	  </nav>
	</header>

	<main>
		<div class="container">
			<%= render partial: 'shared/messages' %>

			<%= yield %>		
		</div>
	</main>

    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">Footer Content</h5>
            <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
          </div>
          <div class="col l4 offset-l2 s12">
            <h5 class="white-text">Links</h5>
            <ul>
              <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
              <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
              <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
              <li><a class="grey-text text-lighten-3" href="#!">Link 4</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
        Â© 2014 Copyright Text
        <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
        </div>
      </div>
    </footer>
</body>
</html>

<div class="row">
	<% @projects.each do |project| %>
		<div class="col m6">	
			<%= link_to project do %>
				<div class="card">
					
					<div class="card-image waves-effect waves-block waves-light">
						<%= image_tag project.image %>
					</div>

					<div class="card-content">
						<span class="card-title grey-text text-darken-4">
							<%= project.shortname %>
						</span>
					</div>

				</div>
			<% end %>
		</div>
	<% end %>
</div>